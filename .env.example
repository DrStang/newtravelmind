# Database
DATABASE_URL=mysql://user:password@localhost:3306/travelmind

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379
# OR
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Secret (use a strong random string)
